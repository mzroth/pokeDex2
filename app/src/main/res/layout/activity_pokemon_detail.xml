<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".controller.PokemonDetail" android:background="@color/dark_background">

    <ImageView
            android:layout_width="300dp"
            android:layout_height="300dp"
            android:id="@+id/poke_image_view" app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:contentDescription="@string/poke_image_content_description"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/height_text_view"
            android:textSize="18sp" app:layout_constraintStart_toStartOf="@+id/poke_image_view"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/poke_image_view"
            android:background="@drawable/text_view_background" android:textColor="@color/text_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/weight_text_view"
            android:textSize="18sp"
            android:background="@drawable/text_view_background" android:textColor="@color/text_light"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/height_text_view"
            app:layout_constraintStart_toStartOf="@+id/height_text_view"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type1_text_view" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/weight_text_view"
            app:layout_constraintStart_toStartOf="@+id/weight_text_view"
            android:background="@drawable/text_view_background" android:textColor="@color/text_light"
            android:textSize="18sp"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/type2_text_view" app:layout_constraintStart_toStartOf="@+id/type1_text_view"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/type1_text_view" android:textSize="18sp"
            android:textColor="@color/text_light"/>
</android.support.constraint.ConstraintLayout>