<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pokemon_list_id_text_view" android:layout_weight="0"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="8dp" android:layout_marginStart="16dp" android:layout_marginEnd="8dp"
            android:textSize="18sp" android:textColor="@color/text_light"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/pokemon_list_name_text_view"
            android:layout_weight="1"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp"
            android:layout_marginEnd="16dp" android:layout_marginBottom="8dp" android:textSize="18sp"
            android:textColor="@color/text_light"/>
</LinearLayout>